<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Club Settings' %></title>
    <link href="/css/admin.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <div class="logo">ðŸ¥‹ DojoPro</div>
            <div class="club-info">
                <% if (userClub) { %>
                    <div class="club-name"><%= userClub.club_name %></div>
                    <div style="font-size: 0.9rem; opacity: 0.8;">Club Management Portal</div>
                <% } %>
            </div>
            <div class="user-info">
                <div><%= user.first_name %> <%= user.last_name %></div>
                <form method="POST" action="/logout" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </div>
    </div>

    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/dashboard">DojoPro Admin</a>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/members" class="nav-link">
                    <i class="fas fa-users"></i> Members
                </a>
                <a href="/locations" class="nav-link">
                    <i class="fas fa-map-marker-alt"></i> Locations
                </a>
                <a href="/staff" class="nav-link">
                    <i class="fas fa-user-tie"></i> Staff
                </a>
                <a href="/checkins" class="nav-link">
                    <i class="fas fa-clock"></i> Check-ins
                </a>
                <a href="/settings" class="nav-link active">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="content-header">
            <h1><i class="fas fa-cog"></i> Club Settings</h1>
        </div>

        <% if (messages && messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= messages.success %>
            </div>
        <% } %>

        <% if (messages && messages.error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
            </div>
        <% } %>

        <div class="card">
            <form method="POST" action="/club/settings">
                <!-- Club Profile -->
                <div class="section-title"><i class="fas fa-id-card"></i> Club Profile</div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="club_name" class="form-label">Club Name *</label>
                        <input id="club_name" name="club_name" type="text" class="form-input" required
                               value="<%= clubDetails ? (clubDetails.club_name || '') : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="website_url" class="form-label">Website</label>
                        <input id="website_url" name="website_url" type="url" class="form-input"
                               value="<%= clubDetails ? (clubDetails.website_url || '') : '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" rows="3" class="form-input"
                              placeholder="Brief description of your club"><%= clubDetails ? (clubDetails.description || '') : '' %></textarea>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label for="subdomain" class="form-label">Subdomain</label>
                        <input id="subdomain" name="subdomain" type="text" class="form-input"
                               pattern="^[a-z0-9-]{3,63}$" placeholder="my-dojo"
                               value="<%= clubDetails ? (clubDetails.subdomain || '') : '' %>">
                        <div class="form-help">Your site will be <em>subdomain</em>.dojopro.com</div>
                    </div>

                    <div class="form-group">
                        <label for="status" class="form-label">Status</label>
                        <% const st = clubDetails ? clubDetails.status : 'active'; %>
                        <select id="status" name="status" class="form-select">
                            <option value="active" <%= st==='active'?'selected':'' %>>Active</option>
                            <option value="suspended" <%= st==='suspended'?'selected':'' %>>Suspended</option>
                            <option value="deleted" <%= st==='deleted'?'selected':'' %>>Deleted</option>
                        </select>
                    </div>
                </div>

                <!-- Branding -->
                <div class="section-title"><i class="fas fa-brush"></i> Branding</div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="logo_url" class="form-label">Logo URL</label>
                        <input id="logo_url" name="logo_url" type="url" class="form-input"
                               placeholder="https://example.com/logo.png"
                               value="<%= clubSettings ? (clubSettings.logo_url || '') : '' %>">
                        <div class="form-help">Paste a direct image URL. File upload can be added later.</div>
                    </div>

                    <div class="form-group">
                        <label for="primary_color" class="form-label">Primary Color</label>
                        <input id="primary_color" name="primary_color" type="color" class="form-input"
                               value="<%= clubSettings ? (clubSettings.primary_color || '#4f46e5') : '#4f46e5' %>">
                    </div>

                    <div class="form-group">
                        <label for="secondary_color" class="form-label">Secondary Color</label>
                        <input id="secondary_color" name="secondary_color" type="color" class="form-input"
                               value="<%= clubSettings ? (clubSettings.secondary_color || '#0ea5e9') : '#0ea5e9' %>">
                    </div>
                </div>

                <!-- Locale -->
                <div class="section-title"><i class="fas fa-globe"></i> Locale & Time</div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="locale" class="form-label">Locale</label>
                        <% const loc = clubSettings ? (clubSettings.locale || 'en-US') : 'en-US'; %>
                        <select id="locale" name="locale" class="form-select">
                            <option value="en-US" <%= loc==='en-US'?'selected':'' %>>English (US)</option>
                            <option value="en-GB" <%= loc==='en-GB'?'selected':'' %>>English (UK)</option>
                            <option value="es-ES" <%= loc==='es-ES'?'selected':'' %>>EspaÃ±ol (ES)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="timezone" class="form-label">Timezone</label>
                        <% const tz = clubSettings ? (clubSettings.timezone || 'America/New_York') : 'America/New_York'; %>
                        <select id="timezone" name="timezone" class="form-select">
                            <option value="America/New_York" <%= tz==='America/New_York'?'selected':'' %>>America/New_York</option>
                            <option value="America/Chicago" <%= tz==='America/Chicago'?'selected':'' %>>America/Chicago</option>
                            <option value="America/Denver" <%= tz==='America/Denver'?'selected':'' %>>America/Denver</option>
                            <option value="America/Los_Angeles" <%= tz==='America/Los_Angeles'?'selected':'' %>>America/Los_Angeles</option>
                        </select>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-floppy-disk"></i> Save</button>
                </div>
            </form>
        </div>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 DojoPro. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
