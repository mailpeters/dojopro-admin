<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Check-ins Management - ClubDirector Admin</title>
    <link href="/css/admin.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <div class="logo">ðŸ“Š ClubDirector</div>
            <div class="club-info">
                <% if (userClub) { %>
                    <div class="club-name"><%= userClub.club_name %></div>
                    <div style="font-size: 0.9rem; opacity: 0.8;">Club Management Portal</div>
                <% } %>
            </div>
            <div class="user-info">
                <div><%= user.first_name %> <%= user.last_name %></div>
                <form method="POST" action="/logout" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </div>
    </div>

    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/dashboard">ClubDirector Admin</a>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/members" class="nav-link">
                    <i class="fas fa-users"></i> Members
                </a>
                <a href="/locations" class="nav-link">
                    <i class="fas fa-map-marker-alt"></i> Locations
                </a>
                <a href="/staff" class="nav-link">
                    <i class="fas fa-user-tie"></i> Staff
                </a>
                <a href="/checkins" class="nav-link active">
                    <i class="fas fa-clock"></i> Check-ins
                </a>
                <a href="/settings" class="nav-link">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="content-header">
            <h1><i class="fas fa-clock"></i> Check-ins Management</h1>
        </div>

        <% if (messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= messages.success %>
            </div>
        <% } %>

        <% if (messages.error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
            </div>
        <% } %>

        <% if (checkins && checkins.length > 0) { %>
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-clock"></i> Recent Check-ins</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-user"></i> Member</th>
                                    <th><i class="fas fa-map-marker-alt"></i> Location</th>
                                    <th><i class="fas fa-sign-in-alt"></i> Check-in Time</th>
                                    <th><i class="fas fa-sign-out-alt"></i> Check-out Time</th>
                                    <th><i class="fas fa-clock"></i> Duration</th>
                                    <th><i class="fas fa-info-circle"></i> Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% checkins.forEach(checkin => { %>
                                    <tr>
                                        <td>
                                            <strong><%= checkin.first_name %> <%= checkin.last_name %></strong><br>
                                            <small style="color: #6c757d;"><%= checkin.email %></small>
                                        </td>
                                        <td><%= checkin.location_name %></td>
                                        <td>
                                            <% 
                                                const checkinTime = new Date(checkin.local_check_in_time);
                                                const options = { 
                                                    year: 'numeric', 
                                                    month: 'short', 
                                                    day: 'numeric', 
                                                    hour: '2-digit', 
                                                    minute: '2-digit' 
                                                };
                                            %>
                                            <%= checkinTime.toLocaleDateString('en-US', options) %>
                                        </td>
                                        <td>
                                            <% if (checkin.local_check_out_time) { %>
                                                <% 
                                                    const checkoutTime = new Date(checkin.local_check_out_time);
                                                %>
                                                <%= checkoutTime.toLocaleDateString('en-US', options) %>
                                            <% } else { %>
                                                <span style="color: #6c757d;">Still checked in</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (checkin.local_check_out_time) { %>
                                                <% 
                                                    const checkinTime = new Date(checkin.local_check_in_time);
                                                    const checkoutTime = new Date(checkin.local_check_out_time);
                                                    const duration = Math.floor((checkoutTime - checkinTime) / (1000 * 60)); // minutes
                                                    const hours = Math.floor(duration / 60);
                                                    const minutes = duration % 60;
                                                %>
                                                <span class="duration">
                                                    <% if (hours > 0) { %>
                                                        <%= hours %>h <%= minutes %>m
                                                    <% } else { %>
                                                        <%= minutes %>m
                                                    <% } %>
                                                </span>
                                            <% } else { %>
                                                <% 
                                                    const checkinTime = new Date(checkin.local_check_in_time);
                                                    const now = new Date();
                                                    const duration = Math.floor((now - checkinTime) / (1000 * 60)); // minutes
                                                    const hours = Math.floor(duration / 60);
                                                    const minutes = duration % 60;
                                                %>
                                                <span class="duration">
                                                    <% if (hours > 0) { %>
                                                        <%= hours %>h <%= minutes %>m
                                                    <% } else { %>
                                                        <%= minutes %>m
                                                    <% } %>
                                                    <small style="color: #6c757d;">(ongoing)</small>
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (checkin.local_check_out_time) { %>
                                                <span class="status-badge status-completed">Completed</span>
                                            <% } else { %>
                                                <span class="status-badge status-active">Active</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-clock"></i>
                <h3>No Check-ins Found</h3>
                <p>Member check-ins will appear here once members start using the system.</p>
            </div>
        <% } %>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 ClubDirector. All rights reserved.</p>
        </div>
    </footer>
    <script src="/js/main.js"></script>
</body>
</html>
