<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locations - DojoPro Admin</title>
    <link href="/css/admin.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <div class="logo">ðŸ¥‹ DojoPro</div>
            <div class="club-info">
                <% if (userClub) { %>
                    <div class="club-name"><%= userClub.club_name %></div>
                    <div style="font-size: 0.9rem; opacity: 0.8;">Club Management Portal</div>
                <% } %>
            </div>
            <div class="user-info">
                <div><%= user.first_name %> <%= user.last_name %></div>
                <form method="POST" action="/logout" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </div>
    </div>

    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/dashboard">DojoPro Admin</a>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/members" class="nav-link">
                    <i class="fas fa-users"></i> Members
                </a>
                <a href="/locations" class="nav-link active">
                    <i class="fas fa-map-marker-alt"></i> Locations
                </a>
                <a href="/staff" class="nav-link">
                    <i class="fas fa-user-tie"></i> Staff
                </a>
                <a href="/checkins" class="nav-link">
                    <i class="fas fa-clock"></i> Check-ins
                </a>
                <a href="/settings" class="nav-link">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="content-header">
            <h1><i class="fas fa-map-marker-alt"></i> Locations Management</h1>
            <a href="/locations/add" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Location
            </a>
        </div>

        <% if (messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= messages.success %>
            </div>
        <% } %>

        <% if (messages.error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
            </div>
        <% } %>

        <% if (locations && locations.length > 0) { %>
            <div class="stats-row">
                <div class="stat-card">
                    <div class="stat-number"><%= locations.length %></div>
                    <div class="stat-label">Total Locations</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= locations.filter(l => l.is_primary_location).length %></div>
                    <div class="stat-label">Primary Locations</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= locations.filter(l => l.capacity).reduce((sum, l) => sum + (l.capacity || 0), 0) %></div>
                    <div class="stat-label">Total Capacity</div>
                </div>
            </div>

            <div class="locations-grid">
                <% locations.forEach(location => { %>
                    <div class="location-card <%= location.is_primary_location ? 'primary' : '' %>">
                        <div class="location-header <%= location.is_primary_location ? 'primary' : '' %>">
                            <div class="location-name">
                                <i class="fas fa-building"></i>
                                <%= location.location_name %>
                                <% if (location.is_primary_location) { %>
                                    <span class="primary-badge">
                                        <i class="fas fa-star"></i> Primary
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="location-body">
                            <div class="location-info">
                                <div class="address-full">
                                    <div class="info-label">
                                        <i class="fas fa-map-pin"></i> Full Address
                                    </div>
                                    <div class="info-value">
                                        <%= location.address_line1 %><br>
                                        <% if (location.address_line2) { %>
                                            <%= location.address_line2 %><br>
                                        <% } %>
                                        <%= location.city %>, <%= location.state %> <%= location.postal_code %>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-phone"></i> Phone
                                    </div>
                                    <div class="info-value">
                                        <%= location.phone || 'Not provided' %>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-users"></i> Capacity
                                    </div>
                                    <div class="info-value">
                                        <%= location.capacity || 'Not set' %>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-clock"></i> Timezone
                                    </div>
                                    <div class="info-value">
                                        <%= location.timezone || 'America/New_York' %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="location-actions">
                                <a href="/locations/<%= location.location_id %>/edit" class="btn btn-secondary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <% if (!location.is_primary_location) { %>
                                    <form method="POST" action="/locations/<%= location.location_id %>/delete" style="display: inline;">
                                        <button type="submit" class="btn btn-danger" 
                                                onclick="return confirm('Are you sure you want to delete this location?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-map-marker-alt"></i>
                <h3>No Locations Found</h3>
                <p>Get started by adding your first location to manage your club's facilities.</p>
                <a href="/locations/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Your First Location
                </a>
            </div>
        <% } %>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 DojoPro. All rights reserved.</p>
        </div>
    </footer>
    <script src="/js/main.js"></script>
</body>
</html>
