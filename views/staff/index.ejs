<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Management - DojoPro Admin</title>
    <link href="/css/admin.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <div class="logo">ðŸ¥‹ DojoPro</div>
            <div class="club-info">
                <% if (userClub) { %>
                    <div class="club-name"><%= userClub.club_name %></div>
                    <div style="font-size: 0.9rem; opacity: 0.8;">Club Management Portal</div>
                <% } %>
            </div>
            <div class="user-info">
                <div><%= user.first_name %> <%= user.last_name %></div>
                <form method="POST" action="/logout" style="display: inline;">
                    <button type="submit" class="btn-logout">Logout</button>
                </form>
            </div>
        </div>
    </div>

    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/dashboard">DojoPro Admin</a>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/members" class="nav-link">
                    <i class="fas fa-users"></i> Members
                </a>
                <a href="/locations" class="nav-link">
                    <i class="fas fa-map-marker-alt"></i> Locations
                </a>
                <a href="/staff" class="nav-link active">
                    <i class="fas fa-user-tie"></i> Staff
                </a>
                <a href="/checkins" class="nav-link">
                    <i class="fas fa-clock"></i> Check-ins
                </a>
                <a href="/settings" class="nav-link">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </div>
        </div>
    </nav>

    <div class="main-content">
        <div class="content-header">
            <h1><i class="fas fa-user-tie"></i> Staff Management</h1>
            <a href="/staff/add" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Staff
            </a>
        </div>

        <% if (messages.success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= messages.success %>
            </div>
        <% } %>

        <% if (messages.error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= messages.error %>
            </div>
        <% } %>

        <% if (staff && staff.length > 0) { %>
            <div class="staff-grid">
                <% staff.forEach(member => { %>
                    <div class="staff-card <%= member.is_primary_contact ? 'primary' : '' %>">
                        <div class="staff-header <%= member.is_primary_contact ? 'primary' : '' %>">
                            <div class="staff-name">
                                <i class="fas fa-user-tie"></i>
                                <%= member.first_name %> <%= member.last_name %>
                                <% if (member.is_primary_contact) { %>
                                    <span class="primary-badge">
                                        <i class="fas fa-star"></i> Primary
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="staff-body">
                            <div class="staff-info">
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-envelope"></i> Email
                                    </div>
                                    <div class="info-value">
                                        <%= member.email %>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-phone"></i> Phone
                                    </div>
                                    <div class="info-value">
                                        <%= member.phone || 'Not provided' %>
                                    </div>
                                </div>
                                
                                <div class="info-item">
                                    <div class="info-label">
                                        <i class="fas fa-user-tag"></i> Role
                                    </div>
                                    <div class="info-value">
                                        <span class="role-badge <%= member.role %>">
                                            <%= member.role.charAt(0).toUpperCase() + member.role.slice(1) %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="staff-actions">
                                <a href="/staff/<%= member.user_id %>/edit" class="btn btn-secondary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <% if (member.role !== 'owner') { %>
                                    <form method="POST" action="/staff/<%= member.user_id %>/delete" style="display: inline;">
                                        <button type="submit" class="btn btn-danger" 
                                                onclick="return confirm('Are you sure you want to remove this staff member?')">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-user-tie"></i>
                <h3>No Staff Members Found</h3>
                <p>Add staff members to help manage your club operations.</p>
                <a href="/staff/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Your First Staff Member
                </a>
            </div>
        <% } %>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2025 DojoPro. All rights reserved.</p>
        </div>
    </footer>
    <script src="/js/main.js"></script>
</body>
</html>
